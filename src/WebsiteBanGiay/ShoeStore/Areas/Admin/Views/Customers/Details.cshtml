@model ShoeStore.Models.ApplicationUser

@{
    ViewData["Title"] = "Chi tiết khách hàng";
    var orders = ViewBag.Orders as List<ShoeStore.Models.Order> ?? new List<ShoeStore.Models.Order>();
    var totalOrders = ViewBag.TotalOrders ?? 0;
    var totalSpent = ViewBag.TotalSpent ?? 0m;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-user-circle me-2"></i>Chi tiết khách hàng</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
        </a>
    </div>

    <div class="row">
        <!-- Customer Info -->
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <div class="avatar-circle bg-primary text-white d-inline-flex align-items-center justify-content-center rounded-circle" style="width: 100px; height: 100px; font-size: 40px;">
                            @Model.FullName.Substring(0, 1).ToUpper()
                        </div>
                    </div>
                    
                    <h4 class="card-title">@Model.FullName</h4>
                    <p class="text-muted">@Model.Email</p>
                    
                    <div class="d-flex justify-content-center gap-2 mb-3">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success p-2">Đang hoạt động</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary p-2">Đã khóa</span>
                        }
                        
                        @if (Model.EmailConfirmed)
                        {
                            <span class="badge bg-info text-dark p-2">Đã xác thực Email</span>
                        }
                    </div>

                    <hr />

                    <div class="text-start">
                        <div class="mb-3">
                            <strong><i class="fas fa-phone me-2 text-muted"></i>Số điện thoại:</strong>
                            <p class="ms-4 mb-0">@(Model.PhoneNumber ?? "Chưa cập nhật")</p>
                        </div>
                        <div class="mb-3">
                            <strong><i class="fas fa-map-marker-alt me-2 text-muted"></i>Địa chỉ:</strong>
                            <p class="ms-4 mb-0">@(Model.Address ?? "Chưa cập nhật")</p>
                        </div>
                        <div class="mb-3">
                            <strong><i class="fas fa-calendar me-2 text-muted"></i>Ngày tham gia:</strong>
                            <p class="ms-4 mb-0">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                        <div class="mb-3">
                            <strong><i class="fas fa-clock me-2 text-muted"></i>Đăng nhập lần cuối:</strong>
                            <p class="ms-4 mb-0">@(Model.LastLoginAt?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa đăng nhập")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics & Orders -->
        <div class="col-md-8 mb-4">
            <!-- Stats Cards -->
            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm bg-primary text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="card-title mb-0">Tổng đơn hàng</h6>
                                    <h2 class="mt-2 mb-0">@totalOrders</h2>
                                </div>
                                <i class="fas fa-shopping-bag fa-3x opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm bg-success text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="card-title mb-0">Tổng chi tiêu</h6>
                                    <h2 class="mt-2 mb-0">@(((decimal)totalSpent).ToString("N0"))đ</h2>
                                </div>
                                <i class="fas fa-money-bill-wave fa-3x opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Orders -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="fas fa-history me-2"></i>Lịch sử đơn hàng gần đây</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Mã đơn</th>
                                    <th>Ngày đặt</th>
                                    <th>Tổng tiền</th>
                                    <th>Trạng thái</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (orders.Any())
                                {
                                    foreach (var order in orders)
                                    {
                                        <tr>
                                            <td><strong>@order.OrderNumber</strong></td>
                                            <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td class="fw-bold text-primary">@order.TotalAmount.ToString("N0")đ</td>
                                            <td>
                                                @switch (order.Status)
                                                {
                                                    case ShoeStore.Models.OrderStatus.Pending:
                                                        <span class="badge bg-warning text-dark">Chờ xử lý</span>
                                                        break;
                                                    case ShoeStore.Models.OrderStatus.Confirmed:
                                                        <span class="badge bg-info text-dark">Đã xác nhận</span>
                                                        break;
                                                    case ShoeStore.Models.OrderStatus.Processing:
                                                        <span class="badge bg-primary">Đang xử lý</span>
                                                        break;
                                                    case ShoeStore.Models.OrderStatus.Shipping:
                                                        <span class="badge bg-info">Đang giao</span>
                                                        break;
                                                    case ShoeStore.Models.OrderStatus.Delivered:
                                                        <span class="badge bg-success">Đã giao</span>
                                                        break;
                                                    case ShoeStore.Models.OrderStatus.Cancelled:
                                                        <span class="badge bg-danger">Đã hủy</span>
                                                        break;
                                                    case ShoeStore.Models.OrderStatus.Returned:
                                                        <span class="badge bg-secondary">Đã trả hàng</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <a asp-controller="Orders" asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-4 text-muted">
                                            Khách hàng chưa có đơn hàng nào
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                @if (orders.Any())
                {
                    <div class="card-footer bg-white text-center py-3">
                        <a asp-controller="Orders" asp-action="Index" asp-route-search="@Model.Email" class="btn btn-link text-decoration-none">
                            Xem tất cả đơn hàng <i class="fas fa-arrow-right ms-1"></i>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
