@model ShoeStore.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-info-circle me-2"></i>Chi tiết sản phẩm</h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-primary me-2">
                <i class="fas fa-edit me-2"></i>Chỉnh sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Product Image & Status -->
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <img src="@(Model.MainImageUrl ?? "https://via.placeholder.com/300")" 
                         alt="@Model.Name" 
                         class="img-fluid rounded mb-3" 
                         style="max-height: 400px; object-fit: cover;">
                    
                    <div class="d-flex justify-content-center gap-2 mb-3">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success p-2">Đang hoạt động</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary p-2">Đã vô hiệu hóa</span>
                        }

                        @if (Model.IsFeatured)
                        {
                            <span class="badge bg-warning text-dark p-2">Nổi bật</span>
                        }

                        @if (Model.IsBestSeller)
                        {
                            <span class="badge bg-danger p-2">Bán chạy</span>
                        }
                    </div>

                    <h4 class="card-title">@Model.Name</h4>
                    <p class="text-muted">@Model.ProductCode</p>
                </div>
            </div>
        </div>

        <!-- Product Details -->
        <div class="col-md-8 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title border-bottom pb-2 mb-3">Thông tin chi tiết</h5>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Danh mục:</strong>
                            <p class="text-muted">@Model.Category.Name</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Thương hiệu:</strong>
                            <p class="text-muted">@Model.Brand.Name</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Giá gốc:</strong>
                            <p class="text-muted">@Model.Price.ToString("N0") VNĐ</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Giảm giá:</strong>
                            <p class="text-muted">@(Model.DiscountPercent?.ToString("N0") ?? "0")%</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Giá bán:</strong>
                            <p class="text-danger fw-bold fs-5">
                                @(Model.SalePrice?.ToString("N0") ?? Model.Price.ToString("N0")) VNĐ
                            </p>
                        </div>
                    </div>

                    <div class="mb-3">
                        <strong>Mô tả:</strong>
                        <p class="text-muted mt-2" style="white-space: pre-line;">@Model.Description</p>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-6">
                            <small class="text-muted">Ngày tạo: @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                        </div>
                        <div class="col-md-6 text-end">
                            @if (Model.UpdatedAt.HasValue)
                            {
                                <small class="text-muted">Cập nhật lần cuối: @Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</small>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sizes & Colors (Placeholder for now, as they are separate tables) -->
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Kích thước & Số lượng</h5>
                </div>
                <div class="card-body">
                    @if (Model.ProductSizes != null && Model.ProductSizes.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Size</th>
                                        <th>Số lượng tồn</th>
                                        <th>Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var size in Model.ProductSizes)
                                    {
                                        <tr>
                                            <td>@size.Size</td>
                                            <td>@size.StockQuantity</td>
                                            <td>
                                                @if (size.IsAvailable)
                                                {
                                                    <span class="badge bg-success">Có sẵn</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Hết hàng</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center my-3">Chưa có thông tin kích thước</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Màu sắc</h5>
                </div>
                <div class="card-body">
                    @if (Model.ProductColors != null && Model.ProductColors.Any())
                    {
                        <div class="d-flex gap-2 flex-wrap">
                            @foreach (var color in Model.ProductColors)
                            {
                                <div class="d-flex align-items-center border rounded p-2">
                                    <div style="width: 20px; height: 20px; background-color: @color.ColorCode; border: 1px solid #ddd; border-radius: 50%; margin-right: 8px;"></div>
                                    <span>@color.ColorName</span>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center my-3">Chưa có thông tin màu sắc</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
