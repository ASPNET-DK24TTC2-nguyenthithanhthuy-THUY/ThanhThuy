@model List<ShoeStore.Models.Order>
@{
    ViewData["Title"] = "Quản lý đơn hàng";
}

<h2 class="mb-4"><i class="fas fa-shopping-cart me-2"></i>Quản lý đơn hàng</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Status Tabs -->
<ul class="nav nav-pills mb-4">
    <li class="nav-item">
        <a class="nav-link @(ViewBag.Status == null ? "active" : "")" asp-action="Index">
            Tất cả (@ViewBag.TotalItems)
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(ViewBag.Status == OrderStatus.Pending ? "active" : "")" asp-action="Index" asp-route-status="@OrderStatus.Pending">
            Chờ xử lý (@ViewBag.PendingCount)
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(ViewBag.Status == OrderStatus.Confirmed ? "active" : "")" asp-action="Index" asp-route-status="@OrderStatus.Confirmed">
            Đã xác nhận (@ViewBag.ConfirmedCount)
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(ViewBag.Status == OrderStatus.Shipping ? "active" : "")" asp-action="Index" asp-route-status="@OrderStatus.Shipping">
            Đang giao (@ViewBag.ShippingCount)
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(ViewBag.Status == OrderStatus.Delivered ? "active" : "")" asp-action="Index" asp-route-status="@OrderStatus.Delivered">
            Đã giao (@ViewBag.DeliveredCount)
        </a>
    </li>
</ul>

<!-- Orders Table -->
<div class="card border-0 shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Mã ĐH</th>
                        <th>Khách hàng</th>
                        <th>Ngày đặt</th>
                        <th>Tổng tiền</th>
                        <th>Thanh toán</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td><strong>#@order.OrderId</strong></td>
                            <td>
                                @order.User.FullName
                                <br />
                                <small class="text-muted">@order.User.Email</small>
                            </td>
                            <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td><strong>@order.TotalAmount.ToString("N0")đ</strong></td>
                            <td>
                                @switch (order.PaymentMethod)
                                {
                                    case PaymentMethod.COD:
                                        <span class="badge bg-success">COD</span>
                                        break;
                                    case PaymentMethod.BankTransfer:
                                        <span class="badge bg-primary">Chuyển khoản</span>
                                        break;
                                    case PaymentMethod.CreditCard:
                                        <span class="badge bg-info">Thẻ</span>
                                        break;
                                }
                            </td>
                            <td>
                                @switch (order.Status)
                                {
                                    case OrderStatus.Pending:
                                        <span class="badge bg-warning">Chờ xử lý</span>
                                        break;
                                    case OrderStatus.Confirmed:
                                        <span class="badge bg-info">Đã xác nhận</span>
                                        break;
                                    case OrderStatus.Processing:
                                        <span class="badge bg-primary">Đang xử lý</span>
                                        break;
                                    case OrderStatus.Shipping:
                                        <span class="badge bg-secondary">Đang giao</span>
                                        break;
                                    case OrderStatus.Delivered:
                                        <span class="badge bg-success">Đã giao</span>
                                        break;
                                    case OrderStatus.Cancelled:
                                        <span class="badge bg-danger">Đã hủy</span>
                                        break;
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-primary">
                                    <i class="fas fa-eye me-1"></i>Chi tiết
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (ViewBag.TotalPages > 1)
        {
            <nav class="mt-3">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-status="@ViewBag.Status">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
</div>
