@model ShoeStore.Models.Order
@{
    ViewData["Title"] = "Chi tiết đơn hàng #" + Model.OrderId;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-receipt me-2"></i>Đơn hàng #@Model.OrderId</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Quay lại
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <!-- Order Items -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title mb-3">Sản phẩm</h5>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Số lượng</th>
                                <th>Đơn giá</th>
                                <th class="text-end">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderDetails)
                            {
                                <tr>
                                    <td>
                                        <strong>@item.ProductName</strong>
                                        @if (!string.IsNullOrEmpty(item.Size) || !string.IsNullOrEmpty(item.Color))
                                        {
                                            <br />
                                            <small class="text-muted">
                                                @if (!string.IsNullOrEmpty(item.Size))
                                                {
                                                    <span>Size: @item.Size</span>
                                                }
                                                @if (!string.IsNullOrEmpty(item.Color))
                                                {
                                                    <span class="ms-2">Màu: @item.Color</span>
                                                }
                                            </small>
                                        }
                                    </td>
                                    <td>@item.Quantity</td>
                                    <td>@item.UnitPrice.ToString("N0")đ</td>
                                    <td class="text-end">@item.TotalPrice.ToString("N0")đ</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3" class="text-end"><strong>Tạm tính:</strong></td>
                                <td class="text-end">@Model.SubTotal.ToString("N0")đ</td>
                            </tr>
                            <tr>
                                <td colspan="3" class="text-end"><strong>Phí vận chuyển:</strong></td>
                                <td class="text-end">@Model.ShippingFee.ToString("N0")đ</td>
                            </tr>
                            <tr class="table-primary">
                                <td colspan="3" class="text-end"><h5 class="mb-0">Tổng cộng:</h5></td>
                                <td class="text-end"><h5 class="mb-0">@Model.TotalAmount.ToString("N0")đ</h5></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <!-- Update Status -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title mb-3">Cập nhật trạng thái</h5>
                <form asp-action="UpdateStatus" method="post">
                    <input type="hidden" name="id" value="@Model.OrderId" />
                    <select name="status" class="form-select mb-3">
                        <option value="@OrderStatus.Pending" selected="@(Model.Status == OrderStatus.Pending)">Chờ xử lý</option>
                        <option value="@OrderStatus.Confirmed" selected="@(Model.Status == OrderStatus.Confirmed)">Đã xác nhận</option>
                        <option value="@OrderStatus.Processing" selected="@(Model.Status == OrderStatus.Processing)">Đang xử lý</option>
                        <option value="@OrderStatus.Shipping" selected="@(Model.Status == OrderStatus.Shipping)">Đang giao</option>
                        <option value="@OrderStatus.Delivered" selected="@(Model.Status == OrderStatus.Delivered)">Đã giao</option>
                        <option value="@OrderStatus.Cancelled" selected="@(Model.Status == OrderStatus.Cancelled)">Đã hủy</option>
                    </select>
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-save me-2"></i>Cập nhật
                    </button>
                </form>
            </div>
        </div>

        <!-- Customer Info -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title mb-3">Thông tin khách hàng</h5>
                <p class="mb-2"><strong>Họ tên:</strong> @Model.CustomerName</p>
                <p class="mb-2"><strong>Email:</strong> @Model.CustomerEmail</p>
                <p class="mb-2"><strong>SĐT:</strong> @Model.CustomerPhone</p>
                <p class="mb-2"><strong>Địa chỉ:</strong> @Model.ShippingAddress</p>
            </div>
        </div>

        <!-- Payment Info -->
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h5 class="card-title mb-3">Thanh toán</h5>
                <p class="mb-2">
                    <strong>Phương thức:</strong>
                    @switch (Model.PaymentMethod)
                    {
                        case PaymentMethod.COD:
                            <span class="badge bg-success">COD</span>
                            break;
                        case PaymentMethod.BankTransfer:
                            <span class="badge bg-primary">Chuyển khoản</span>
                            break;
                        case PaymentMethod.CreditCard:
                            <span class="badge bg-info">Thẻ tín dụng</span>
                            break;
                    }
                </p>
                <p class="mb-0">
                    <strong>Trạng thái:</strong>
                    @if (Model.IsPaid)
                    {
                        <span class="badge bg-success">Đã thanh toán</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">Chưa thanh toán</span>
                    }
                </p>
            </div>
        </div>
    </div>
</div>
