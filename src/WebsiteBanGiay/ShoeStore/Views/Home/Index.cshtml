    <h2 class="section-title">
        <i class="fas fa-fire text-danger me-2"></i>Sản phẩm bán chạy
    </h2>
    
    @if (bestSellerProducts.Any())
    {
        <div class="row g-4">
            @foreach (var product in bestSellerProducts)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="product-card">
                        <div class="position-relative">
                            @if (product.DiscountPercent > 0)
                            {
                                <span class="product-badge">-@product.DiscountPercent%</span>
                            }
                            <img src="@(product.MainImageUrl ?? "https://via.placeholder.com/300x250?text=Shoe+Image")" 
                                 alt="@product.Name" 
                                 class="product-image">
                            <button class="btn btn-light btn-sm rounded-circle shadow-sm position-absolute top-0 end-0 m-2 wishlist-btn" 
                                    data-product-id="@product.ProductId" 
                                    title="Thêm vào yêu thích">
                                <i class="far fa-heart text-danger"></i>
                            </button>
                        </div>
                        <div class="card-body p-3">
                            <span class="category-badge">@product.Brand.Name</span>
                            <h5 class="product-title">@product.Name</h5>
                            <div class="mb-3">
                                <span class="product-price">@product.Price.ToString("N0")đ</span>
                                @if (product.SalePrice.HasValue && product.SalePrice < product.Price)
                                {
                                    <span class="product-old-price">@product.SalePrice.Value.ToString("N0")đ</span>
                                }
                            </div>
                            <div class="d-grid gap-2">
                                <a asp-controller="Products" asp-action="Details" asp-route-id="@product.ProductId" 
                                   class="btn btn-primary">
                                    <i class="fas fa-eye me-2"></i>Xem chi tiết
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-box-open" style="font-size: 5rem; color: #cbd5e1;"></i>
            <p class="text-muted mt-3">Chưa có sản phẩm bán chạy</p>
        </div>
    }
</div>

<!-- CTA Section -->
<div class="container my-5">
    <div class="text-center py-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 1rem; color: white;">
        <h2 class="mb-3">Khám phá thêm nhiều sản phẩm</h2>
        <p class="mb-4">Hàng ngàn mẫu giày đang chờ bạn</p>
        <a asp-controller="Products" asp-action="Index" class="btn-view-all">
            <i class="fas fa-arrow-right me-2"></i>Xem tất cả sản phẩm
        </a>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.wishlist-btn').click(function (e) {
                e.preventDefault();
                var btn = $(this);
                var productId = btn.data('product-id');
                var icon = btn.find('i');

                $.post('/Wishlist/Toggle', { productId: productId }, function (response) {
                    if (response.success) {
                        if (response.isAdded) {
                            icon.removeClass('far').addClass('fas');
                            alert('Đã thêm vào danh sách yêu thích!');
                        } else {
                            icon.removeClass('fas').addClass('far');
                            alert('Đã xóa khỏi danh sách yêu thích!');
                        }
                    } else {
                        alert(response.message);
                        if (response.message.includes("đăng nhập")) {
                            window.location.href = '/Account/Login';
                        }
                    }
                }).fail(function () {
                    alert('Có lỗi xảy ra, vui lòng thử lại sau.');
                });
            });
        });
    </script>
}
