@{
    ViewData["Title"] = "Trang chủ";
    var featuredProducts = ViewBag.FeaturedProducts as List<ShoeStore.Models.Product> ?? new List<ShoeStore.Models.Product>();
    var bestSellerProducts = ViewBag.BestSellerProducts as List<ShoeStore.Models.Product> ?? new List<ShoeStore.Models.Product>();
}

@section Styles {
    <style>
        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 100px 0;
            margin-bottom: 4rem;
            position: relative;
            overflow: hidden;
        }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="%23ffffff" fill-opacity="0.1" d="M0,96L48,112C96,128,192,160,288,160C384,160,480,128,576,112C672,96,768,96,864,112C960,128,1056,160,1152,160C1248,160,1344,128,1392,112L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>') no-repeat bottom;
            background-size: cover;
        }

        .hero-content {
            position: relative;
            z-index: 1;
        }

        .hero-title {
            font-size: 3.5rem;
            font-weight: 800;
            margin-bottom: 1.5rem;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
        }

        .hero-subtitle {
            font-size: 1.5rem;
            margin-bottom: 2rem;
            opacity: 0.95;
        }

        .product-card {
            border: none;
            border-radius: 1rem;
            overflow: hidden;
            transition: all 0.3s ease;
            background: white;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            height: 100%;
        }

        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.15);
        }

        .product-image {
            width: 100%;
            height: 250px;
            object-fit: cover;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        }

        .product-badge {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 2rem;
            font-size: 0.85rem;
            font-weight: 600;
            z-index: 1;
        }

        .product-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: #1e293b;
            margin-bottom: 0.5rem;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .product-price {
            font-size: 1.5rem;
            font-weight: 700;
            color: #2563eb;
            margin-bottom: 0.5rem;
        }

        .product-old-price {
            font-size: 1rem;
            color: #94a3b8;
            text-decoration: line-through;
            margin-left: 0.5rem;
        }

        .section-title {
            font-size: 2.5rem;
            font-weight: 800;
            margin-bottom: 3rem;
            text-align: center;
            position: relative;
            padding-bottom: 1rem;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 4px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 2px;
        }

        .category-badge {
            display: inline-block;
            background-color: #f1f5f9;
            color: #64748b;
            padding: 0.25rem 0.75rem;
            border-radius: 1rem;
            font-size: 0.85rem;
            margin-bottom: 0.5rem;
        }

        .features-section {
            background: white;
            padding: 4rem 0;
            margin: 4rem 0;
        }

        .feature-box {
            text-align: center;
            padding: 2rem;
            border-radius: 1rem;
            transition: all 0.3s ease;
        }

        .feature-box:hover {
            background: #f8fafc;
            transform: translateY(-5px);
        }

        .feature-icon {
            font-size: 3rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 1rem;
        }

        .btn-view-all {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 0.75rem 2rem;
            border-radius: 2rem;
            font-weight: 600;
            transition: all 0.3s ease;
            display: inline-block;
            text-decoration: none;
        }

        .btn-view-all:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.4);
            color: white;
        }
    </style>
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 hero-content">
                <h1 class="hero-title">Thủy Store</h1>
                <p class="hero-subtitle">Bạn không chỉ mang giày- Bạn mang cả phong cách</p>
                <a asp-controller="Products" asp-action="Index" class="btn btn-light btn-lg px-5 py-3">
                    <i class="fas fa-shopping-bag me-2"></i>Mua sắm ngay
                </a>
            </div>
            <div class="col-lg-6 text-center d-none d-lg-block">
                <i class="fas fa-shoe-prints" style="font-size: 15rem; opacity: 0.2;"></i>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="features-section">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="feature-box">
                    <div class="feature-icon">
                        <i class="fas fa-shipping-fast"></i>
                    </div>
                    <h5>Giao hàng nhanh</h5>
                    <p class="text-muted">Miễn phí ship cho đơn từ 500k</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-box">
                    <div class="feature-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h5>Hàng chính hãng</h5>
                    <p class="text-muted">100% sản phẩm chính hãng</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-box">
                    <div class="feature-icon">
                        <i class="fas fa-sync-alt"></i>
                    </div>
                    <h5>Đổi trả dễ dàng</h5>
                    <p class="text-muted">Đổi trả trong 30 ngày</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-box">
                    <div class="feature-icon">
                        <i class="fas fa-headset"></i>
                    </div>
                    <h5>Hỗ trợ 24/7</h5>
                    <p class="text-muted">Tư vấn nhiệt tình</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Featured Products -->
<div class="container my-5">
    <h2 class="section-title">
        <i class="fas fa-star text-warning me-2"></i>Sản phẩm nổi bật
    </h2>
    
    @if (featuredProducts.Any())
    {
        <div class="row g-4">
            @foreach (var product in featuredProducts)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="product-card">
                        <div class="position-relative">
                            @if (product.DiscountPercent > 0)
                            {
                                <span class="product-badge">-@product.DiscountPercent%</span>
                            }
                            <img src="@(product.MainImageUrl ?? "https://via.placeholder.com/300x250?text=Shoe+Image")" 
                                 alt="@product.Name" 
                                 class="product-image">
                            <button class="btn btn-light btn-sm rounded-circle shadow-sm position-absolute top-0 end-0 m-2 wishlist-btn" 
                                    data-product-id="@product.ProductId" 
                                    title="Thêm vào yêu thích">
                                <i class="far fa-heart text-danger"></i>
                            </button>
                        </div>
                        <div class="card-body p-3">
                            <span class="category-badge">@product.Category.Name</span>
                            <h5 class="product-title">@product.Name</h5>
                            <div class="mb-3">
                                <span class="product-price">@product.Price.ToString("N0")đ</span>
                                @if (product.SalePrice.HasValue && product.SalePrice < product.Price)
                                {
                                    <span class="product-old-price">@product.SalePrice.Value.ToString("N0")đ</span>
                                }
                            </div>
                            <div class="d-grid gap-2">
                                <a asp-controller="Products" asp-action="Details" asp-route-id="@product.ProductId" 
                                   class="btn btn-primary">
                                    <i class="fas fa-eye me-2"></i>Xem chi tiết
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-box-open" style="font-size: 5rem; color: #cbd5e1;"></i>
            <p class="text-muted mt-3">Chưa có sản phẩm nổi bật</p>
        </div>
    }
</div>

<!-- Best Sellers -->
