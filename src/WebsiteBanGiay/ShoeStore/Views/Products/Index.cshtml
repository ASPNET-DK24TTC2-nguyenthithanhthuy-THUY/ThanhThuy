@model List<ShoeStore.Models.Product>
@{
    ViewData["Title"] = "Sản phẩm";
    var categories = ViewBag.Categories as List<ShoeStore.Models.Category> ?? new List<ShoeStore.Models.Category>();
    var brands = ViewBag.Brands as List<ShoeStore.Models.Brand> ?? new List<ShoeStore.Models.Brand>();
    var currentPage = ViewBag.CurrentPage ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
    var totalItems = ViewBag.TotalItems ?? 0;
}

@section Styles {
    <style>
        .filter-card {
            background: white;
            border-radius: 1rem;
            padding: 1.5rem;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            margin-bottom: 2rem;
        }

        .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 2rem;
        }

        .product-card {
            border: none;
            border-radius: 1rem;
            overflow: hidden;
            transition: all 0.3s ease;
            background: white;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            height: 100%;
        }

        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.15);
        }

        .product-image {
            width: 100%;
            height: 250px;
            object-fit: cover;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        }

        .product-badge {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 2rem;
            font-size: 0.85rem;
            font-weight: 600;
            z-index: 1;
        }

        .filter-section {
            margin-bottom: 1.5rem;
        }

        .filter-section h6 {
            font-weight: 700;
            margin-bottom: 1rem;
            color: #1e293b;
        }

        .pagination .page-link {
            border-radius: 0.5rem;
            margin: 0 0.25rem;
            border: none;
            color: #2563eb;
        }

        .pagination .page-item.active .page-link {
            background: linear-gradient(135deg, #2563eb 0%, #7c3aed 100%);
            border: none;
        }
    </style>
}

<div class="container my-5">
    <!-- Page Header -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">Sản phẩm</h1>
        <p class="text-muted">Khám phá bộ sưu tập giày thể thao chính hãng</p>
    </div>

    <div class="row">
        <!-- Filters Sidebar -->
        <div class="col-lg-3">
            <div class="filter-card sticky-top" style="top: 2rem;">
                <h5 class="mb-4"><i class="fas fa-filter me-2"></i>Bộ lọc</h5>
                
                <form method="get" asp-action="Index">
                    <!-- Search -->
                    <div class="filter-section">
                        <h6>Tìm kiếm</h6>
                        <input type="text" name="search" class="form-control" placeholder="Tìm sản phẩm..." 
                               value="@ViewBag.Search">
                    </div>

                    <!-- Category Filter -->
                    <div class="filter-section">
                        <h6>Danh mục</h6>
                        <select name="categoryId" class="form-select">
                            <option value="">Tất cả danh mục</option>
                            @foreach (var category in categories)
                            {
                                <option value="@category.CategoryId" 
                                        selected="@(ViewBag.CategoryId == category.CategoryId)">
                                    @category.Name
                                </option>
                            }
                        </select>
                    </div>

                    <!-- Brand Filter -->
                    <div class="filter-section">
                        <h6>Thương hiệu</h6>
                        <select name="brandId" class="form-select">
                            <option value="">Tất cả thương hiệu</option>
                            @foreach (var brand in brands)
                            {
                                <option value="@brand.BrandId" 
                                        selected="@(ViewBag.BrandId == brand.BrandId)">
                                    @brand.Name
                                </option>
                            }
                        </select>
                    </div>

                    <!-- Price Range -->
                    <div class="filter-section">
                        <h6>Khoảng giá</h6>
                        <div class="row g-2">
                            <div class="col-6">
                                <input type="number" name="minPrice" class="form-control" placeholder="Từ" 
                                       value="@ViewBag.MinPrice">
                            </div>
                            <div class="col-6">
                                <input type="number" name="maxPrice" class="form-control" placeholder="Đến" 
                                       value="@ViewBag.MaxPrice">
                            </div>
                        </div>
                    </div>

                    <!-- Sort -->
                    <div class="filter-section">
                        <h6>Sắp xếp</h6>
                        <select name="sortBy" class="form-select">
                            <option value="">Mới nhất</option>
                            <option value="price_asc" selected="@(ViewBag.SortBy == "price_asc")">Giá tăng dần</option>
                            <option value="price_desc" selected="@(ViewBag.SortBy == "price_desc")">Giá giảm dần</option>
                            <option value="name_asc" selected="@(ViewBag.SortBy == "name_asc")">Tên A-Z</option>
                            <option value="name_desc" selected="@(ViewBag.SortBy == "name_desc")">Tên Z-A</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-2"></i>Áp dụng
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary w-100 mt-2">
                        <i class="fas fa-redo me-2"></i>Đặt lại
                    </a>
                </form>
            </div>
        </div>

        <!-- Products Grid -->
        <div class="col-lg-9">
            <!-- Results Info -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <p class="mb-0 text-muted">
                    Hiển thị <strong>@Model.Count</strong> trong tổng số <strong>@totalItems</strong> sản phẩm
                </p>
            </div>

            @if (Model.Any())
            {
                <div class="product-grid">
                    @foreach (var product in Model)
                    {
                        <div class="product-card">
                            <div class="position-relative">
                                @if (product.DiscountPercent > 0)
                                {
                                    <span class="product-badge">-@product.DiscountPercent%</span>
                                }
                                <img src="@(product.MainImageUrl ?? "https://via.placeholder.com/300x250?text=Shoe+Image")" 
                                     alt="@product.Name" 
                                     class="product-image">
                            </div>
                            <div class="card-body p-3">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <span class="badge bg-light text-dark">@product.Category.Name</span>
                                    <span class="badge bg-secondary">@product.Brand.Name</span>
                                </div>
                                <h5 class="card-title" style="min-height: 3rem;">@product.Name</h5>
                                <p class="card-text text-muted small" style="min-height: 2.5rem;">
                                    @(product.Description.Length > 80 ? product.Description.Substring(0, 80) + "..." : product.Description)
                                </p>
                                <div class="mb-3">
                                    @if (product.SalePrice.HasValue && product.SalePrice < product.Price)
                                    {
                                        <span class="h5 text-primary fw-bold">@product.SalePrice.Value.ToString("N0")đ</span>
                                        <span class="text-muted text-decoration-line-through ms-2">@product.Price.ToString("N0")đ</span>
                                    }
                                    else
                                    {
                                        <span class="h5 text-primary fw-bold">@product.Price.ToString("N0")đ</span>
                                    }
                                </div>
                                <div class="d-grid gap-2">
                                    <a asp-action="Details" asp-route-id="@product.ProductId" class="btn btn-primary">
                                        <i class="fas fa-eye me-2"></i>Xem chi tiết
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @if (totalPages > 1)
                {
                    <nav class="mt-5">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" 
                                   asp-route-page="@(currentPage - 1)"
                                   asp-route-search="@ViewBag.Search"
                                   asp-route-categoryId="@ViewBag.CategoryId"
                                   asp-route-brandId="@ViewBag.BrandId"
                                   asp-route-minPrice="@ViewBag.MinPrice"
                                   asp-route-maxPrice="@ViewBag.MaxPrice"
                                   asp-route-sortBy="@ViewBag.SortBy">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>

                            @for (int i = 1; i <= totalPages; i++)
                            {
                                <li class="page-item @(i == currentPage ? "active" : "")">
                                    <a class="page-link" asp-action="Index" 
                                       asp-route-page="@i"
                                       asp-route-search="@ViewBag.Search"
                                       asp-route-categoryId="@ViewBag.CategoryId"
                                       asp-route-brandId="@ViewBag.BrandId"
                                       asp-route-minPrice="@ViewBag.MinPrice"
                                       asp-route-maxPrice="@ViewBag.MaxPrice"
                                       asp-route-sortBy="@ViewBag.SortBy">
                                        @i
                                    </a>
                                </li>
                            }

                            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" 
                                   asp-route-page="@(currentPage + 1)"
                                   asp-route-search="@ViewBag.Search"
                                   asp-route-categoryId="@ViewBag.CategoryId"
                                   asp-route-brandId="@ViewBag.BrandId"
                                   asp-route-minPrice="@ViewBag.MinPrice"
                                   asp-route-maxPrice="@ViewBag.MaxPrice"
                                   asp-route-sortBy="@ViewBag.SortBy">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-box-open" style="font-size: 5rem; color: #cbd5e1;"></i>
                    <h4 class="mt-4 text-muted">Không tìm thấy sản phẩm</h4>
                    <p class="text-muted">Vui lòng thử lại với bộ lọc khác</p>
                    <a asp-action="Index" class="btn btn-primary mt-3">
                        <i class="fas fa-redo me-2"></i>Xem tất cả sản phẩm
                    </a>
                </div>
            }
        </div>
    </div>
</div>
