@model ShoeStore.ViewModels.CheckoutViewModel
@{
    ViewData["Title"] = "Thanh toán";
    var subtotal = Model.CartItems.Sum(item => item.Total);
    var shippingFee = subtotal >= 500000 ? 0 : 30000;
    var total = subtotal + shippingFee;
}

<div class="container my-5">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-controller="Cart" asp-action="Index">Giỏ hàng</a></li>
            <li class="breadcrumb-item active">Thanh toán</li>
        </ol>
    </nav>

    <h1 class="mb-4"><i class="fas fa-credit-card me-2"></i>Thanh toán</h1>

    <form asp-action="Process" method="post">
        <div class="row">
            <!-- Checkout Form -->
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-body p-4">
                        <h4 class="mb-4">Thông tin giao hàng</h4>
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FullName" class="form-label fw-semibold">Họ và tên *</label>
                                <input asp-for="FullName" class="form-control form-control-lg" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="PhoneNumber" class="form-label fw-semibold">Số điện thoại *</label>
                                <input asp-for="PhoneNumber" class="form-control form-control-lg" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold">Email *</label>
                            <input asp-for="Email" class="form-control form-control-lg" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label fw-semibold">Địa chỉ giao hàng *</label>
                            <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label fw-semibold">Ghi chú</label>
                            <textarea asp-for="Notes" class="form-control" rows="2" placeholder="Ghi chú về đơn hàng (tùy chọn)"></textarea>
                        </div>
                    </div>
                </div>

                <!-- Shipping Method -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body p-4">
                        <h4 class="mb-4">Phương thức vận chuyển</h4>
                        
                        <div class="form-check mb-3 p-3 border rounded">
                            <input class="form-check-input" type="radio" asp-for="ShippingMethod" value="Standard" id="shippingStandard" checked>
                            <label class="form-check-label w-100" for="shippingStandard">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <strong>Giao hàng tiêu chuẩn</strong>
                                        <p class="text-muted small mb-0">Giao trong 3-5 ngày làm việc</p>
                                    </div>
                                    <strong class="text-primary">@(shippingFee == 0 ? "Miễn phí" : shippingFee.ToString("N0") + "đ")</strong>
                                </div>
                            </label>
                        </div>

                        <div class="form-check p-3 border rounded">
                            <input class="form-check-input" type="radio" asp-for="ShippingMethod" value="Express" id="shippingExpress">
                            <label class="form-check-label w-100" for="shippingExpress">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <strong>Giao hàng nhanh</strong>
                                        <p class="text-muted small mb-0">Giao trong 1-2 ngày làm việc</p>
                                    </div>
                                    <strong class="text-primary">50,000đ</strong>
                                </div>
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Payment Method -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body p-4">
                        <h4 class="mb-4">Phương thức thanh toán</h4>
                        
                        <div class="form-check mb-3 p-3 border rounded">
                            <input class="form-check-input" type="radio" asp-for="PaymentMethod" value="COD" id="paymentCOD" checked>
                            <label class="form-check-label w-100" for="paymentCOD">
                                <i class="fas fa-money-bill-wave me-2 text-success"></i>
                                <strong>Thanh toán khi nhận hàng (COD)</strong>
                                <p class="text-muted small mb-0">Thanh toán bằng tiền mặt khi nhận hàng</p>
                            </label>
                        </div>

                        <div class="form-check mb-3 p-3 border rounded">
                            <input class="form-check-input" type="radio" asp-for="PaymentMethod" value="BankTransfer" id="paymentBank">
                            <label class="form-check-label w-100" for="paymentBank">
                                <i class="fas fa-university me-2 text-primary"></i>
                                <strong>Chuyển khoản ngân hàng</strong>
                                <p class="text-muted small mb-0">Chuyển khoản qua tài khoản ngân hàng</p>
                            </label>
                        </div>

                        <div class="form-check p-3 border rounded">
                            <input class="form-check-input" type="radio" asp-for="PaymentMethod" value="CreditCard" id="paymentCard">
                            <label class="form-check-label w-100" for="paymentCard">
                                <i class="fas fa-credit-card me-2 text-info"></i>
                                <strong>Thẻ tín dụng/Ghi nợ</strong>
                                <p class="text-muted small mb-0">Thanh toán bằng thẻ Visa, Mastercard</p>
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="col-lg-4">
                <div class="card shadow-sm" style="position: sticky; top: 2rem;">
                    <div class="card-body p-4">
                        <h4 class="mb-4">Đơn hàng của bạn</h4>
                        
                        <!-- Cart Items -->
                        <div class="mb-3" style="max-height: 300px; overflow-y: auto;">
                            @foreach (var item in Model.CartItems)
                            {
                                <div class="d-flex mb-3 pb-3 border-bottom">
                                    <img src="@(item.ProductImage ?? "https://via.placeholder.com/60")" 
                                         alt="@item.ProductName" 
                                         style="width: 60px; height: 60px; object-fit: cover; border-radius: 0.5rem;">
                                    <div class="ms-3 flex-grow-1">
                                        <h6 class="mb-1">@item.ProductName</h6>
                                        <small class="text-muted">
                                            @if (!string.IsNullOrEmpty(item.Size))
                                            {
                                                <span>Size: @item.Size</span>
                                            }
                                            @if (!string.IsNullOrEmpty(item.Color))
                                            {
                                                <span class="ms-2">Màu: @item.Color</span>
                                            }
                                        </small>
                                        <div class="d-flex justify-content-between mt-1">
                                            <span class="text-muted">x@item.Quantity</span>
                                            <strong class="text-primary">@item.Total.ToString("N0")đ</strong>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <hr>

                        <!-- Totals -->
                        <div class="d-flex justify-content-between mb-2">
                            <span>Tạm tính:</span>
                            <strong>@subtotal.ToString("N0")đ</strong>
                        </div>

                        <div class="d-flex justify-content-between mb-3">
                            <span>Phí vận chuyển:</span>
                            <strong class="@(shippingFee == 0 ? "text-success" : "")">
                                @(shippingFee == 0 ? "Miễn phí" : shippingFee.ToString("N0") + "đ")
                            </strong>
                        </div>

                        <hr>

                        <div class="d-flex justify-content-between mb-4">
                            <h5>Tổng cộng:</h5>
                            <h5 class="text-primary">@total.ToString("N0")đ</h5>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 btn-lg">
                            <i class="fas fa-check-circle me-2"></i>Đặt hàng
                        </button>

                        <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-secondary w-100 mt-2">
                            <i class="fas fa-arrow-left me-2"></i>Quay lại giỏ hàng
                        </a>

                        <!-- Security Info -->
                        <div class="mt-4 pt-3 border-top text-center">
                            <i class="fas fa-lock text-success me-2"></i>
                            <small class="text-muted">Thanh toán an toàn & bảo mật</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
