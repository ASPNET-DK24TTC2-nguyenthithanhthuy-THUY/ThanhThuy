@model ShoeStore.Models.Order
@{
    ViewData["Title"] = "Đặt hàng thành công";
}

@section Styles {
    <style>
        .success-icon {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 2rem;
        }

        .order-card {
            background: white;
            border-radius: 1rem;
            padding: 2rem;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            margin-bottom: 2rem;
        }
    </style>
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Success Message -->
            <div class="text-center mb-5">
                <div class="success-icon">
                    <i class="fas fa-check fa-3x text-white"></i>
                </div>
                <h1 class="display-5 fw-bold mb-3">Đặt hàng thành công!</h1>
                <p class="lead text-muted">Cảm ơn bạn đã mua hàng tại Thủy Store</p>
            </div>

            <!-- Order Info -->
            <div class="order-card">
                <h4 class="mb-4"><i class="fas fa-receipt me-2"></i>Thông tin đơn hàng</h4>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <p class="mb-2"><strong>Mã đơn hàng:</strong></p>
                        <p class="text-primary h5">#@Model.OrderId</p>
                    </div>
                    <div class="col-md-6">
                        <p class="mb-2"><strong>Ngày đặt:</strong></p>
                        <p>@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <p class="mb-2"><strong>Trạng thái:</strong></p>
                        <span class="badge bg-warning text-dark">Đang xử lý</span>
                    </div>
                    <div class="col-md-6">
                        <p class="mb-2"><strong>Thanh toán:</strong></p>
                        <span class="badge bg-info">
                            @switch (Model.PaymentMethod)
                            {
                                case PaymentMethod.COD:
                                    <text>Thanh toán khi nhận hàng</text>
                                    break;
                                case PaymentMethod.BankTransfer:
                                    <text>Chuyển khoản ngân hàng</text>
                                    break;
                                case PaymentMethod.CreditCard:
                                    <text>Thẻ tín dụng</text>
                                    break;
                            }
                        </span>
                    </div>
                </div>
            </div>

            <!-- Customer Info -->
            <div class="order-card">
                <h4 class="mb-4"><i class="fas fa-user me-2"></i>Thông tin người nhận</h4>
                
                <p class="mb-2"><strong>Họ tên:</strong> @Model.CustomerName</p>
                <p class="mb-2"><strong>Email:</strong> @Model.CustomerEmail</p>
                <p class="mb-2"><strong>Số điện thoại:</strong> @Model.CustomerPhone</p>
                <p class="mb-2"><strong>Địa chỉ:</strong> @Model.ShippingAddress</p>
                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <p class="mb-0"><strong>Ghi chú:</strong> @Model.Notes</p>
                }
            </div>

            <!-- Order Items -->
            <div class="order-card">
                <h4 class="mb-4"><i class="fas fa-box me-2"></i>Sản phẩm đã đặt</h4>
                
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Số lượng</th>
                                <th>Đơn giá</th>
                                <th class="text-end">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderDetails)
                            {
                                <tr>
                                    <td>
                                        <strong>@item.ProductName</strong>
                                        @if (!string.IsNullOrEmpty(item.Size) || !string.IsNullOrEmpty(item.Color))
                                        {
                                            <br />
                                            <small class="text-muted">
                                                @if (!string.IsNullOrEmpty(item.Size))
                                                {
                                                    <span>Size: @item.Size</span>
                                                }
                                                @if (!string.IsNullOrEmpty(item.Color))
                                                {
                                                    <span class="ms-2">Màu: @item.Color</span>
                                                }
                                            </small>
                                        }
                                    </td>
                                    <td>@item.Quantity</td>
                                    <td>@item.UnitPrice.ToString("N0")đ</td>
                                    <td class="text-end">@item.TotalPrice.ToString("N0")đ</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3" class="text-end"><strong>Tạm tính:</strong></td>
                                <td class="text-end">@Model.SubTotal.ToString("N0")đ</td>
                            </tr>
                            <tr>
                                <td colspan="3" class="text-end"><strong>Phí vận chuyển:</strong></td>
                                <td class="text-end">@Model.ShippingFee.ToString("N0")đ</td>
                            </tr>
                            <tr class="table-primary">
                                <td colspan="3" class="text-end"><h5 class="mb-0">Tổng cộng:</h5></td>
                                <td class="text-end"><h5 class="mb-0 text-primary">@Model.TotalAmount.ToString("N0")đ</h5></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

            <!-- Payment Instructions -->
            @if (Model.PaymentMethod == PaymentMethod.BankTransfer)
            {
                <div class="order-card bg-light">
                    <h5 class="mb-3"><i class="fas fa-info-circle me-2"></i>Thông tin chuyển khoản</h5>
                    <p class="mb-2"><strong>Ngân hàng:</strong> Vietcombank</p>
                    <p class="mb-2"><strong>Số tài khoản:</strong> 0123456789</p>
                    <p class="mb-2"><strong>Chủ tài khoản:</strong> THUY STORE</p>
                    <p class="mb-2"><strong>Nội dung:</strong> DH@Model.OrderId</p>
                    <div class="alert alert-warning mt-3 mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Vui lòng chuyển khoản trong vòng 24h để giữ đơn hàng
                    </div>
                </div>
            }

            <!-- Actions -->
            <div class="text-center mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg me-2">
                    <i class="fas fa-home me-2"></i>Về trang chủ
                </a>
                <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-shopping-bag me-2"></i>Tiếp tục mua sắm
                </a>
            </div>

            <!-- Contact Info -->
            <div class="text-center mt-5 p-4 bg-light rounded">
                <h6 class="mb-3">Cần hỗ trợ?</h6>
                <p class="mb-2">
                    <i class="fas fa-phone me-2 text-primary"></i>
                    Hotline: <strong>1900-xxxx</strong>
                </p>
                <p class="mb-0">
                    <i class="fas fa-envelope me-2 text-primary"></i>
                    Email: <strong>support@thuystore.vn</strong>
                </p>
            </div>
        </div>
    </div>
</div>
